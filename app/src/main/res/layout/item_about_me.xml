<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <moizest89.geronimostudios.test.util.RoundedImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/about_me_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_me_label_name"
        fontPath="fonts/NotoSans-Bold.ttf"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/about_me_name"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/about_me_career"
        fontPath="fonts/NotoSansUI-Regular.ttf"
        android:text="@string/about_me_label_career"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        fontPath="fonts/NotoSansUI-Regular.ttf"
        android:autoLink="web|email"
        android:textSize="@dimen/about_me_text"
        android:text="@string/about_me_message_about"/>

</LinearLayout>